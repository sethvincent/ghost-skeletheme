{{!< default}}

{{#foreach posts}}
  <div class="posts">
    <article class="{{post_class}}">
      <header class="post-header">
        <span class="post-meta">
          <time datetime="{{date format='YYYY-MM-DD'}}">
            {{date format="DD MMM YYYY"}}
          </time> 
          {{tags prefix="on "}}
        </span>
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      </header>
      <section class="post-excerpt">
        <p>{{excerpt}}&hellip;</p>
      </section>
    </article>
  </div>
{{/foreach}}

{{pagination}}